			<dialog id="addPersonModal" class="modal">
				<div class="modal-box w-11/12 max-w-4xl">
					<h3 class="text-lg font-bold mb-4">Add New Member</h3>
					<div class="grid grid-cols-1 md:grid-cols-2 gap-4">
						<div class="form-control">
							<label class="label">
								<span class="label-text font-semibold">Node</span>
							</label>
							<select id="memberNode" class="select select-bordered w-full" onchange="checkValidName()">
								<option value="">Select Node</option>
								<option value="Bhaskar">Bhaskar Node</option>
								<option value="Harshitha">Harshitha Node</option>
							</select>
						</div>
						<div class="form-control">
							<label class="label">
								<span class="label-text font-semibold">Group</span>
							</label>
							<select id="memberGroup" class="select select-bordered w-full" onchange="checkValidName()">
								<option value="">Select Group</option>
								<option value="SKB">SKB</option>
								<option value="Sapphire">Sapphire</option>
							</select>
						</div>
						<div class="form-control">
							<label class="label">
								<span class="label-text font-semibold">IR ID</span>
							</label>
							<input type="text" id="memberIRID" class="input input-bordered w-full" placeholder="Enter IR ID" onchange="checkValidName()" />
						</div>
						<div class="form-control">
							<label class="label">
								<span class="label-text font-semibold">Full Name</span>
							</label>
							<input type="text" id="memberName" class="input input-bordered w-full" placeholder="Enter full name" onchange="checkValidName()" />
							<span id="loader_isValidName" class="loading loading-spinner loading-sm hidden"></span>
							<span id="status_isValidName" class="text-sm"></span>
						</div>
