							<label class="label">
								<span class="label-text font-semibold">Phone Number</span>
							</label>
							<input type="tel" id="memberPhone" class="input input-bordered w-full" placeholder="Enter phone number" />
						</div>
						<div class="form-control">
							<label class="label">
								<span class="label-text font-semibold">Email ID</span>
							</label>
							<input type="email" id="memberEmail" class="input input-bordered w-full" placeholder="Enter email address" />
						</div>
					</div>
					
